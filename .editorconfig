# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[{*.html,*.blade.php}]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[{*.ddl,*.sql}]
indent_style = space
indent_size = 2

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[{composer.lock,composer.json}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.env]
charset = utf-8
indent_size = 2
max_line_length = 80
